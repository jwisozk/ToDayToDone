<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".screen.TasksActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roboto Font"
        android:textAppearance="@style/Text.Regular"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roboto Font"
        android:textAppearance="@style/Text.Medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roboto Font"
        android:textAppearance="@style/Text.Light"/>

    <Button
        android:text="Add"
        style="@style/Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ru.ozh.application.view.CapsuleView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cv_is_stroke="true"
        app:cv_color="@color/gray_"/>

    <ru.ozh.application.view.CapsuleView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cv_color="@color/red"/>

    <ru.ozh.application.view.CapsuleView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cv_color="@color/green"/>

    <ru.ozh.application.view.CapsuleView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:cv_color="@color/gray"/>


</LinearLayout>